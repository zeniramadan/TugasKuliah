<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    tools:context=".AddTugasActivity">

    <!-- Header Simple -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceContainer"
        android:padding="20dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Edit Tugas"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="sans-serif-medium" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Tugas"
                android:textColor="?attr/colorOnSurface"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/editNamaTugasEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_selector"
                android:hint="Masukkan nama tugas..."
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:textColor="?attr/colorOnSurface"
                android:textSize="15sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mata Kuliah"
                android:textColor="?attr/colorOnSurface"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/editMataKuliahEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_selector"
                android:hint="Masukkan mata kuliah..."
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:textColor="?attr/colorOnSurface"
                android:textSize="15sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dosen Pengampu"
                android:textColor="?attr/colorOnSurface"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/editNamaDosenEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_selector"
                android:hint="Masukkan nama dosen..."
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:textColor="?attr/colorOnSurface"
                android:textSize="15sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textColor="?attr/colorOnSurface"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/editDeskripsiEditText"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/input_selector"
                android:hint="Masukkan deskripsi..."
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:textColor="?attr/colorOnSurface"
                android:textSize="15sp"
                android:gravity="top"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deadline"
                android:textColor="?attr/colorOnSurface"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/editDeadlineTextView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_selector"
                android:hint="Pilih tanggal dan waktu..."
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:textColor="@color/danger"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true"
                android:drawableEnd="@drawable/time_picker"
                android:drawableTint="@color/blue" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/editSaveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="14dp"
        android:text="Simpan Perubahan"
        android:textSize="16sp"
        app:backgroundTint="@color/blue"
        app:cornerRadius="12dp"
        app:iconPadding="8dp"
        app:iconTint="?attr/colorOnPrimary"
        app:icon="@drawable/save_button"/>

</LinearLayout>
